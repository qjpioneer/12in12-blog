<div id="page_wrapper">
	<h1>新增文章</h1>

	<%= form_for :post, url: posts_path do |f| %>
		<% if @post.errors.any? %>
		<div id="errors">
			<h2><%=pluralize(@post.errors.count, "Error") %> 出現當這個文章新增時</h2>
			<ul>
				<% @post.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
				<% end %>
			</ul>
		</div>
		<% end %> 
		<p>
			<%= f.label :title %><br>
			<%= f.text_field :title %>
		</p>

		<p>
			<%= f.label :body %><br>
			<%= f.text_area :body %>
		</p>

		<p>
			<%= f.submit %>
		</p>
	<% end %>
</div>