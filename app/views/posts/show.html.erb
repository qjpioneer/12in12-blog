<div id="post_content">
	<h1 class="title">
	<%= @post.title %>
	</h1>

	<p class="date">
		於 <%= time_ago_in_words(@post.created_at) %> 前發布 
		<% if user_signed_in? %>
			|<%= link_to '編輯', edit_post_path(@post) %> 
			|<%= link_to '刪除', post_path(@post),method: :delete,data: {confirm: '你確定嗎?'} %> 
		<% end %>
	</p>

	<p class="body">
		<%= @post.body %>
	</p>


	<div class="comment">
		<h2>目前有 <%= @post.comments.count %> 則留言</h2>
		<%= render @post.comments %>

		<h3>新增留言：</h3>
		<%= render "comments/form" %>
	</div>
</div>